<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shuvalov.nikita.fontcolorchange.MainActivity">

    <TextView
        android:id="@+id/manipulable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="100sp"
        android:textAlignment="center"
        android:minWidth="135sp"/>

    <Button
        android:id="@+id/blueButt"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/manipulable"
        android:layout_alignRight="@id/manipulable"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/manipulable"
        android:text="@string/blue"
        android:textColor="@color/blue"
        android:layout_marginTop="20sp"
        android:minWidth="135sp"/>

    <Button
        android:id="@+id/magentaButt"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/manipulable"
        android:layout_alignRight="@id/manipulable"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/blueButt"
        android:layout_marginTop="10sp"
        android:text="@string/magenta"
        android:textColor="@color/magenta"
        android:minWidth="135sp"/>

    <Button
        android:id="@+id/gandalfTheGreyButt"
        android:layout_width="wrap_content"
        android:minWidth="135sp"
        android:layout_alignLeft="@id/manipulable"
        android:layout_alignRight="@id/manipulable"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/grey"
        android:textColor="@color/grey"
        android:layout_below="@id/magentaButt"
        android:layout_marginTop="10sp"

        />

</RelativeLayout>
